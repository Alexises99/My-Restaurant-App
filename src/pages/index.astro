---
import HomeItem from '../components/HomeItem.astro'
import BaseLayout from '../layouts/BaseLayout.astro'
import Header from '../components/Header.astro'
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from '../i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)

const pageTitle = 'Home'
---

<BaseLayout pageTitle={pageTitle}>
  <Header />
  <section
    class="flex flex-col gap-6 md:gap-52 container mx-auto my-12 md:mb-28"
  >
    <HomeItem
      title={t('home.how-work.title')}
      content={t('home.how-work.body')}
      index={1}
    />
    <HomeItem
      title={t('home.ingredients.title')}
      content={t('home.ingredients.body')}
      inverted
      index={2}
    />
  </section>
</BaseLayout>
